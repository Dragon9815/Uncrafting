            return true;
        }
        else
        {
        	if(player.isSneaking())
        	{
        		Object item = player.getHeldItem();
        		
        		if(item == null)
        		{
        			if((ItemUncraftingUpgrade)item.getItem())
        		}
        	}
        	
            player.displayGUIWorkbench(x, y, z);
            return true;
        }
    }
}
