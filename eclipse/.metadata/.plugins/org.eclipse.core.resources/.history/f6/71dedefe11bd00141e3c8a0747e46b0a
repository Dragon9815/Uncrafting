		this.addSlotToContainer(new Slot(tileentity, 0, 38, 30));
		this.addSlotToContainer(new Slot(tileentity, 0, 38, 30));
		this.addSlotToContainer(new Slot(tileentity, 0, 38, 30));
		this.addSlotToContainer(new Slot(tileentity, 0, 38, 30));
